---
import Analytics from "@/components/Analytics.astro";
import Footer from "@/components/Footer.astro";
import Sidebar from "@/components/Sidebar.astro";
import content from "@/data/en.json";
import "@/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={content.description} />
    <meta name="author" content={content.author} />
    <title>{content.title}</title>
    <Analytics />
  </head>
  <body
    class="bg-neutral-950 flex flex-col gap-4 p-4 md:py-12 h-dvh container mx-auto text-amber-50 relative antialiased"
  >
    <div class="grow sm:grid grid-cols-12">
      <Sidebar />

      <main
        class="mx-auto flex flex-col gap-8 col-span-8 lg:col-span-9 py-4 sm:px-4"
      >
        <slot />
      </main>
    </div>

    <Footer />
  </body>
</html>
