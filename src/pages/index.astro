---
import Experience from "@/components/Experience.astro";
import Section from "@/components/Section.astro";
import content from "@/data/en.json";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <Section>
    <h2 class="text-4xl mb-4 font-medium text-amber-100">Profile</h2>
    <div class="flex flex-col gap-4">
      {content.profile.map((p) => <p set:html={p} />)}
    </div>
  </Section>

  <Section>
    <h2 class="text-4xl mb-4 font-medium text-amber-100">Experience</h2>
    <div class="flex flex-col gap-4">
      {content.experience.map((exp) => <Experience experience={exp} />)}
    </div>
  </Section>

  <Section>
    <h2 class="text-4xl mb-4 font-medium text-amber-100">Education</h2>

    <p class="font-bold text-xl">Arquitectura Técnica</p>

    <div class="font-bold">
      <a
        href="https://www.unex.es/?set_language=en&cl=en"
        target="_blank"
        class="link"
      >
        Universidad de Extremadura
      </a>
    </div>

    <time>1998-2002</time>

    <div class="">Cáceres, Extremadura, Spain</div>
  </Section>
</Layout>
